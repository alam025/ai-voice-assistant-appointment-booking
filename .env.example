# ========================================
# AI VOICE ASSISTANT CONFIGURATION
# ========================================

# Application Settings
APP_NAME=AI Voice Assistant
VERSION=1.0.0
DEBUG=False
HOST=0.0.0.0
PORT=8000

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_WEBHOOK_URL=https://your-domain.com

# AWS Polly Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
POLLY_VOICE_ID=Joanna

# Voice Settings
VOICE_LANGUAGE=en-US
VOICE_ENGINE=neural
SPEECH_RATE=medium

# Appointment Configuration
BUSINESS_NAME=Dr. Smith Office
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00

# Database (Optional)
DATABASE_URL=postgresql://user:password@localhost/voicedb

# Redis Cache (Optional)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/voice_assistant.log

# Security
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090